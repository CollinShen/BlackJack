{
  "version": 2,
  "builds": [
    {
      "src": "backend/app.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/node",
      "config": { 
        "nodeVersion": "20.x",
        "installCommand": "npm install --no-optional",
        "buildCommand": "cd frontend && npm run build"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/app.py" },
    { "src": "/(.*)", "dest": "frontend/build/$1" }
  ]
}
